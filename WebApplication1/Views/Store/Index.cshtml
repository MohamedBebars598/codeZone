
@model List<Branch>




<div class="row">
    <div class="d-flex justify-content-end">
        <span class="mx-2">Add Branch</span>
        <a asp-action="AddBranch" asp-controller="Store" class="link-primary fw-bold"> 
        <i class="fa-solid fa-circle-plus fs-2"></i>

        </a>
    </div>
 @foreach(var store in Model)
{
    
    
       <div class="col-4 my-2">
           <div class="card" style="width: 18rem;">
                  <img  src="~/Images/Store.png" class="card-img-top" alt="StoreImages">
                  <hr/>
                  <div class="card-body ">
                    
                      <h4 class="text-center"><a asp-route-id="@store.ID" asp-action="index" asp-controller="Item" class="link-primary ">@store.Name</a></h4>
                      <p class="text-center">@store.Location</p>
                       <div class="text-end">
                           <a asp-action="EditBranch" asp-controller="Store" asp-route-id="@store.ID" class="btn btn-success">Edit</a>
                           <a onclick="return confirm('Are you sure you want to delete this Branch?');" asp-action="DeleteBranch" asp-controller="Store" asp-route-id="@store.ID" class="btn btn-danger">Remove</a>
                       </div>
                                           
                  </div>
        </div>
       </div>

}





        



   </div>