@model WebApplication1.Models.Branch

@{
    ViewData["Title"] = "AddBranch";
}

<div>
    <a asp-controller="Store" asp-action="Index"><i class="fa-solid fa-circle-arrow-left fs-2"></i></a>
</div>
<h1 class="text-center">Add New Branch</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post" asp-action="AddBranch">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group text-center my-2">
                <input type="submit" value="Add Branch" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
